<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.yunuscagliyan.notepad.AddNoteDialogController"
            prefHeight="400.0" prefWidth="600.0">
    <headerText>
        Add new  note
    </headerText>
    <content>
        <GridPane vgap="10" hgap="10">
            <Label text="Note Title:" textFill="green" GridPane.rowIndex="0" GridPane.columnIndex="0"></Label>
            <TextField fx:id="tfNoteTitle" GridPane.rowIndex="0" GridPane.columnIndex="1"></TextField>

            <Label text="Note Details:" textFill="red" GridPane.rowIndex="1" GridPane.columnIndex="0"></Label>
            <TextArea fx:id="taNoteDetail" wrapText="true" GridPane.rowIndex="1" GridPane.columnIndex="1"></TextArea>

            <Label text="Note Last Date:" textFill="blue" GridPane.rowIndex="2" GridPane.columnIndex="0"></Label>
            <DatePicker fx:id="dpLastDate" GridPane.rowIndex="2" GridPane.columnIndex="1"></DatePicker>
        </GridPane>
    </content>

</DialogPane>
